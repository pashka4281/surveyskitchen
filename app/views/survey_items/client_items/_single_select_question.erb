<%= div_for item, class: "survey_item" do -%>

	<strong class="item-title"><%= "#{counter}. #{item.title}" %></strong>
	<div class="item-content">
		<ul class="unstyled">
	    	<% item.variants_array.each_with_index do |var, i| %>
		    	<li>
			      	<label class="radio">
						<input type="radio" name="response[item-<%= item.id %>][values]" value="<%= i %>" /><%= var %>
					</label>
				</li>
		    <% end %>
		</ul>
		<%- if item.include_txt_field -%>
	      <input type="text" name="response[item-<%= item.id %>][additional_field]" />
	    <%- end -%>
	</div>
<% end %>

<%= div_for item, class: "survey_item" do -%>
    
		<% if !item.youtube_id.blank? %>
			<iframe id="player" type="text/html" width="<%= item.frame_size.split('x')[0] %>" height="<%= item.frame_size.split('x')[1] %>" 
			  src="http://www.youtube.com/embed/<%= item.youtube_id %>?enablejsapi=1&origin=http://example.com" frameborder="0">
			</iframe>
		<% elsif !item.vimeo_id.blank? %>
			<iframe src="http://player.vimeo.com/video/<%= item.vimeo_id %>?title=0&amp;byline=0&amp;portrait=0&amp;badge=0&amp;color=dbdbdb" width="<%= item.frame_size.split('x')[0] %>" height="<%= item.frame_size.split('x')[1] %>" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe> 
		<% else %>
			<video id="my_video_1" class="video-js vjs-default-skin" controls preload="auto" width="640" height="264" data-setup="{}">
			  <source src="<%= item.embed_url %>" type="video/youtube"></source>
			</video>
		<% end %>

<%- end -%>

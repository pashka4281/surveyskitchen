      <%= render 'survey_items/items/_tools_box'%>
  </div>
  <div class="well well-small">
    <strong><%= item.title %></strong>
    <div class="clear"></div>
    <select name="drop_down_<%= item.id %>" class="span9">
      <% for var in item.variants %>
        <option value="<%= var %>" > <%= var %> </option>
      <% end %>
    </select>
  </div>
  
  <button class="btn btn-mini btn-block insert_buttons" type="button">Insert here Â»</button>
<%- end -%>

<%= content_tag_for :div, item, class: "insertable sortable_item question-item", item_id: item.id do -%>
  <div class="navbar-inner pull-right">
    <%= render 'survey_items/items/_tools_box', item: item %>
  </div>
  <div class="well well-small">
    <strong><%= item.title%></strong>
    <div class="clear"></div>
    <% if item.appearance == 'txt_field' %>
      <input type="text" class="span9" />
    <% else %>
      <textarea class="span9"></textarea>
    <% end %>
    
  </div>

  <%= insert_button %>
<%- end -%>

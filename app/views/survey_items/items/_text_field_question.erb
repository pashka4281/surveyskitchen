<%= content_tag_for :div, item, class: "countable survey_item question-item", item_id: item.id do -%>
  <%= render 'survey_items/items/_tools_box', item: item %>
  <div class="item-inner">
    <strong class="item-title"><%= item.title %></strong>
    <div class="item-content">
      <div class="clear"></div>
      <% if item.appearance == 'txt_field' %>
        <input type="text"></input>
      <% else %>
        <textarea></textarea>
      <% end %>
      
    </div>
  </div>

  <%= insert_button %>
<%- end -%>

<%= div_for item, class: "insertable sortable_item question-item", item_id: item.id do -%>
  <div class="navbar-inner pull-right">
    <%= render 'survey_items/items/_tools_box'%>
  </div>
  <div class="well">
    <h5><%= item.title %></h5>
    <table>
      <tr>
        <% item.scale_size.times do %>
          <td><input type="radio" name="scale" /></td>
        <% end %>
      </tr>
      <tr>
        <% item.scale_size.times do |v| %>
          <td><span><%= v+1 %></span></td>
        <% end %>
      </tr>
    </table>
  </div>

  <button class="btn btn-mini btn-block insert_buttons" type="button">Insert here Â»</button>
<%- end -%>

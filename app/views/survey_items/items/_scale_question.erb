<%= content_tag_for :div, item, class: "row insertable sortable_item question-item", item_id: item.id do -%>
  <div class="row content-row">
    <div class="manage_links">
	    <ul class="link-list ">
	      <li><a class="moveGrabber"><img src="/images/icons/move.png"></a></li>
        <li><a href="#"><img src="/images/icons/edit.png"></a></li>
        <li><%= link_to image_tag("/images/icons/trashbox.png"), '#', class: 'deleteLnk', confirm: 'Sure?'%></li>
      </ul>
	  </div>
        
    <div class="row item_header">
      <div class="sixteen columns">
      	<h6><%= item.title%></h6>
      </div>
    </div>
    <div class="row">
      <div class="fifteen columns centered scale_container">
      <table>
        <tr>
          <% item.scale_size.times do %>
            <td><input type="radio" name="scale" /></td>
          <% end %>
        </tr>
        <tr>
          <% item.scale_size.times do |v| %>
            <td><span><%= v+1 %></span></td>
          <% end %>
        </tr>
      </table>
      </div>
    </div>
    
    
  </div>
  <div class="row">
  	<div class="ten columns centered">
  		<button class="button secondary insert_buttons">Insert here Â»</button>
  	</div>
  </div>
<%- end -%>

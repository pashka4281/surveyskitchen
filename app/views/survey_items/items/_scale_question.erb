<%= div_for item, class: "countable survey_item question-item", item_id: item.id do -%>
  <%= render 'survey_items/items/_tools_box', item: item %>
  <div class="item-inner">
    <div class="item-content">
      <strong><%= item.title %></strong>
      <div class="clear"></div>

      <% item.scale_size.times do |v| %>
        <label class="radio inline">
          <input type="radio" name="scale"/><%= v+1 %>
        </label>
      <% end %>
      
    </div>
  </div>

  <%= insert_button %>
<%- end -%>

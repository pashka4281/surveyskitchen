<%= content_tag_for :li, item, class: "countable survey_item", item_id: item.id do -%>
  <%= render 'survey_items/items/_tools_box', item: item %>
  <div class="item-inner">

    <div class="item-content">
      <div class="clear high"></div>
    
      <% if !item.youtube_id.blank? %>
        <iframe id="player" type="text/html" width="400" height="243" 
          src="http://www.youtube.com/embed/<%= item.youtube_id %>?enablejsapi=1&origin=http://example.com" frameborder="0">
        </iframe>
      <% elsif !item.vimeo_id.blank? %>
        <iframe src="http://player.vimeo.com/video/<%= item.vimeo_id %>?title=0&amp;byline=0&amp;portrait=0&amp;badge=0&amp;color=dbdbdb" width="400" height="243" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe> 
      <% else %>
        <video id="my_video_1" class="video-js vjs-default-skin" controls preload="auto" width="400" height="243" data-setup="{}">
          <source src="<%= item.embed_url %>" type="video/youtube"></source>
        </video>
      <% end %>

    </div>
  </div>
<%- end -%>

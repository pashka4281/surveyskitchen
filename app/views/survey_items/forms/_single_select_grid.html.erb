<%= form_for @survey_item || SurveyItems::SingleSelectGrid.new, url: '#', id: 'single_select_grid_form' do |f| %>
	<label>Title:</label>
	<%= f.text_area :title, name: 'survey_item[title]', rows: 2,  
		class: 'width-90', placeholder: "Place item title here" %>
	
	<div class="row">
		<div class="column half-width">
			<label>Row names (one per line)</label>
			<%= f.text_area :rows, name: 'survey_item[rows]', rows: 6,  
				class: 'width-90', placeholder: "Place row titles here" %>
		</div>

		<div class="column half-width">
			<label>Column names (one per line)</label>
			<%= f.text_area :columns, name: 'survey_item[columns]', rows: 6,  
				class: 'width-90', placeholder: "Place column titles here" %>
		</div>
	</div>


	<label class="checkbox">
      <%= f.check_box :required_field, name: 'survey_item[required_field]' %>
      Make this item require user input
    </label>
  
	<%= hidden_field_tag :item_id, @survey_item.try(:id) %>
	<input type="hidden" name="item_type" value="single_select_grid">
<% end %>
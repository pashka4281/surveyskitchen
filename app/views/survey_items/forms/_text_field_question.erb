<%= form_for @survey_item || SurveyItems::TextFieldQuestion.new, url: '#', html:{ id: 'text_field_question_form'} do |f| %>
	<label>Question title:</label>
	<%= f.text_area :title, name: 'survey_item[title]', rows: 2,  
		class: 'full-width', placeholder: "Place question description here" %>

	<label class="">Appearance:</label>
	<label class="radio inline">
		<%= f.radio_button :appearance,'txt_field', name: 'survey_item[appearance]' %> Text field
	</label>
	<label class="radio inline">
		<%= f.radio_button :appearance,'txt_area', name: 'survey_item[appearance]' %> Text area
	</label>

	<%= hidden_field_tag :item_id, @survey_item.try(:id) %>
	<input type="hidden" name="item_type" value="text_field_question">
<% end %>
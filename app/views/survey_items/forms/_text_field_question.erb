<div class="row">
	<div class="sixteen columns">
		<label class="top-span">Question title:</label>
    <textarea name="title" class="min80height vertical-resize" placeholder="Place question description here" id="new_survey_item_title"></textarea>
	</div>

  <div class="sixteen columns">
    <label>Placeholder text</label>
    <input name="title_placeholder" type="text" placeholder="Placeholder text for question input field"/>
  </div>
  
  <div class="sixteen columns">
		<label class="top-span">Appearance:</label>
    <input type="radio" name="appearance" value="txt_field" checked>Text field</input>
    <input type="radio" name="appearance" value="txt_area">Text area</input>
	</div>
</div>

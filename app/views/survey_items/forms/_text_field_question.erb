<div class="modal-header">
	<h3>
		<i class="icon-text-height"></i>
		<%= t('survey_items.text_field.title') %>
	</h3>
</div>

<div class="form-wrapper">
	<%= form_for @survey_item || SurveyItems::TextFieldQuestion.new, url: '#', html:{ id: 'text_field_question_form'} do |f| %>
		<div class="field">
			<label><%= t('survey_items.common.item_title') %></label>
			<%= f.text_area :title, name: 'survey_item[title]', rows: 2, 'data-errormessage' => t('survey_items.common.item_title_error_msg'),
				class: 'validate[required]', placeholder: t('survey_items.common.title_placeholder') %>
		</div>

		<label class=""><%= t('survey_items.text_field.appearance') %></label>
		<label class="radio inline">
			<%= f.radio_button :appearance,'txt_field', name: 'survey_item[appearance]' %>
			<%= t('survey_items.text_field.appearance_field') %>
		</label>
		<label class="radio inline">
			<%= f.radio_button :appearance,'txt_area', name: 'survey_item[appearance]' %>
			<%= t('survey_items.text_field.appearance_area') %>
		</label>

		<label class="checkbox">
	    	<%= f.check_box :required_field, name: 'survey_item[required_field]' %>
	    	<%= t('survey_items.common.make_required') %>
	    </label>

		<%= hidden_field_tag :item_id, @survey_item.try(:id) %>
		<input type="hidden" name="item_type" value="text_field_question">
	<% end %>
</div>


<%= content_for :js do %>
<script>
	$(document).ready(function(){
    	$("form").validationEngine('attach', {promptPosition : "inline", scroll: false});
	});
</script>
<% end %>
<div class="modal-header">
	<h3>
		<i class="icon-font"></i>
		<%= t('survey_items.desc_text.title') %>
	</h3>
</div>

<div class="form-wrapper">
	<%= form_for @survey_item || SurveyItems::DescText.new, url: '#', id: 'desc_text_item_form' do |f| %>
	    <label>Place here some text:</label>
	    <%= f.text_area :text_content, name: 'survey_item[text_content]', rows: 3,  
	    	class: 'tall', placeholder: "Description text", id: 'rich-text-area' %>

	    <%= hidden_field_tag :item_id, @survey_item.try(:id) %>
		<input type="hidden" name="item_type" value="desc_text">
	<% end%>
</div>
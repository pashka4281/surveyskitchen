<div class="modal-header">
	<h3>
		<i class="icon-video"></i>
		<%= t('survey_items.video_question.title') %>
	</h3>
</div>

<div class="form-wrapper">
	<%= form_for @survey_item || SurveyItems::VideoQuestion.new, url: '#', id: 'video_question_form' do |f| %>
		<img src="/images/youtube-logo.jpg" alt="Youtube logo image" /> 
		<img src="/images/vimeo-logo.jpg" alt="Youtube logo image" /> <br /><br />

		<div class="field">
			<label><%= t('survey_items.video_question.url') %></label>
			<%= f.text_field :embed_url, name: 'survey_item[embed_url]', 'data-errormessage' => t('survey_items.video_question.url_err_msg'),
				class: 'validate[required]', placeholder: t('survey_items.video_question.url_placeholder') %>
		</div>

		<%= hidden_field_tag :item_id, @survey_item.try(:id) %>
		<input type="hidden" name="item_type" value="video_question">

		<div class="field">
			<span><%= t('survey_items.video_question.size') %></span>
		    <label class="radio inline">
				<%= f.radio_button :frame_size, "400x243", name: 'survey_item[frame_size]' %>
				<%= t('survey_items.video_question.size_small') %>
			</label>
			<label class="radio inline">
				<%= f.radio_button :frame_size, "640x390", name: 'survey_item[frame_size]' %>
				<%= t('survey_items.video_question.size_medium') %>
			</label>
			<label class="radio inline">
				<%= f.radio_button :frame_size, "820x500", name: 'survey_item[frame_size]' %>
				<%= t('survey_items.video_question.size_big') %>
			</label>
		</div>
	<% end %>
</div>

<%= content_for :js do %>
<script>
	$(document).ready(function(){
    	$("form").validationEngine('attach', {promptPosition : "inline", scroll: false});
	});
</script>
<% end %>
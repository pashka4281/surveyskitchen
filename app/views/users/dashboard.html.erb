<% header('Dasboard') %>

<div class="padded-content">
  <%= ribbed_header 'Dashboard' %>

  <div class="row-fluid">
      <div class="span4">
        <div class="dashboard-box big">
          <h1><%= @responses.count %></h1>
          <h2>all responses</h2>
        </div>
      </div>
      
      <div class="span4">
        <div class="dashboard-box medium">
          <h1><%= @surveys.count %></h1>
          <h2>all surveys</h2>
        </div>
      </div>
      
      <div class="span4 end">
        <div class="dashboard-box small">
          <h1><%= @surveys.select{|x| x.responses.count == 0}.count %></h1>
          <h2>waiting for responses</h2>
        </div>
      </div>

</div>

<div class="events-block">
  <h1>Events:<h1>
  <ul class="events">
    <li>Event1</li>
    <li>Event2</li>
    <li>Event3</li>
    <li>Event4</li>
    <li>Event5</li>
  </ul>
</div>
  
  <ul class="pagination">
    <li class="arrow unavailable"><a href="">&laquo;</a></li>
    <li class="current"><a href="">1</a></li>
    <li><a href="">2</a></li>
    <li><a href="">3</a></li>
    <li><a href="">4</a></li>
    <li class="unavailable"><a href="">&hellip;</a></li>
    <li><a href="">12</a></li>
    <li><a href="">13</a></li>
    <li class="arrow"><a href="">&raquo;</a></li>
  </ul>
</div>



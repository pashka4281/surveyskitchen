<%= page_header t("clients.new.title") %>

<div class="vertical_accordion">
	<div class="tab active">
		<div class="handle">
			<label>
				<input type="radio" name="import_type" checked></input>
				Manual
			</label>
		</div>
		<div class="content">
			<%= form_tag :clients do %>
				<%= text_area_tag :clients_list, '', placeholder: "client@mail.com, John, Smith" %>

				<%= submit_tag "add" %>
			<% end %>
		</div>
	</div>
	<div class="tab">
		<div class="handle">
			<label>
				<input type="radio" name="import_type"></input>
				Import from csv file
			</label>
		</div>
		<div class="content">
			<%= form_tag :clients do %>
				<%= file_field :clients_list, '' %>

				<%= submit_tag "add" %>
			<% end %>
		</div>
	</div>
	<div class="tab">
		<div class="handle">
			<label>
				<input type="radio" name="import_type"></input>
				Import from external service
			</label>
		</div>
		<div class="content">
			<%= form_tag :clients do %>

				<%= submit_tag "add" %>
			<% end %>
		</div>
	</div>
</div>

<% content_for :js do %>
<script>
	$('.vertical_accordion').jAccordion();
</script>
<% end %>
= content_for :description, @post.meta_description
= content_for :keywords, @post.meta_keywords

.a-post
  %h1= @post.title
  .divider
  .post-content= raw @post.content.gsub('&lt;!-- split_content --&gt;', '')
  #disqus_thread

= content_for :js do
  :javascript
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'surveyskitchen'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
    
<div class="padded-content">
  <h3>Sign in</h3>

  <%= form_tag :login do %>
    <%= label_tag :email, nil, class: 'right' %>
    <%= text_field_tag :email, '', placeholder: 'Email address', class: 'six' %>

    <%= label :password, nil, class: 'right' %>
    <%= password_field_tag :password, nil, placeholder: 'Password', class: 'six' %>

    <%= submit_tag "Sign in", class: 'btn' %>
  <% end %>
</div>

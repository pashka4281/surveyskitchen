<%= div_for survey do %>
	<div class="survey-header">
		<h3><%= link_to survey.name, builder_survey_path(survey) %></h3>
		<h5><%= survey.category.name %></h5>
		<div class="survey-date"><%= survey.created_at.to_s(:date_and_time) %></div>
	</div>
	<div class="survey-desc"><%= survey.description %></div>
	<div>
		<%= link_to 'Edit', edit_survey_path(survey), :class => 'btn small' %>
		<%= link_to 'Deploy', deploy_survey_path(survey), class: 'btn small' %>
		<%= link_to "Responses (#{survey.responses.count})", [survey, :responses], class: 'btn small' %>
		<%= link_to 'Report', [:report, survey], class: 'btn small' %>
	</div>
<% end %>
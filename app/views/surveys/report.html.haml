.page-header
  .row
    .col-md-12
      .pull-left
        %h3=raw t('.title', name: @survey.name)
      .pull-right
        = link_to t("surveys.navigation.report.prev"), share_survey_path(@survey), class: "btn btn-default btn-sm"

#report
  - if @responses_content.any?
    - @survey.sorted_question_items.each_with_index do |s_item,i|
      = render "/survey_items/report_item", item: s_item, index: i 
  - else
    %h3= t('.no_data')



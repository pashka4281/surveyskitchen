<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href="/">Surveyskitchen</a>
      <div class="container-fluid nav-collapse">
        <ul class="nav">
          <%=content_tag :li, class: (request.path =~ /(about)(\/)?/ ? 'active' : '')  do -%>
            <%= link_to 'About', :about %>
          <%-end-%>
          <%=content_tag :li, class: (request.path =~ /(tos)(\/)?/ ? 'active' : '')  do -%>
            <%= link_to 'Terms of service', :tos %>
          <%-end-%>          
        </ul>
        <ul class="nav pull-right">
          <%=content_tag :li, class: (request.path =~ /(register)(\/)?/ ? 'active' : '')  do -%>
            <%= link_to 'register', :register %>
          <%-end-%>
          <li class="dropdown" id="menu1">
             <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
               Login
                <b class="caret"></b>
             </a>
             <div class="dropdown-menu">
               <%= form_for(User.new, :url => :login) do |f| %>
                 <fieldset class='textbox' style="padding:10px">
                  <%= f.text_field :email, placeholder: 'Email address' %>
                  <%= f.password_field :password, placeholder: 'Password', class: 'six' %>
                   <input class="btn-primary" name="commit" type="submit" value="Sign In" />
                 </fieldset>
               <% end %>
             </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>


<ul>
	<%=content_tag :li, class: (request.path =~ /\A\/(dashboard)(\/)?\z/ ? 'active' : '')  do -%>
		<%= link_to raw('<i class="icon-home"></i> ' + t("layout.dashboard_link")), :dashboard %>
	<%-end-%>
    <%=content_tag :li, class: (request.path =~ /\A\/(clients)(\/)?\z/ ? 'active' : '')  do -%>
        <%= link_to raw("<i class=\"icon-users-1\"></i> #{t('layout.clients')} (#{current_account.clients.count})"), :clients %>
    <%-end-%>
</ul>